<div data-role="new_circle">
  <Bonfire.UI.Common.OpenModalLive
    id="new_circle"
    title_text={l("Create a new circle")}
    form_opts={%{"phx-submit" => "Bonfire.Boundaries:circle_create"}}
    no_actions
  >
    <div>
      <Bonfire.UI.Boundaries.Web.NewCircleLive scope={@scope} setting_boundaries={@setting_boundaries} />
    </div>

    <:open_btn>
      <div class="btn btn-neutral btn-sm">
        {l("New circle")}
      </div>
    </:open_btn>
  </Bonfire.UI.Common.OpenModalLive>
</div>