        x-show="!edit"
        type="button"
        x-on:click="edit = !edit"
        type="button"
        class="btn btn-warning w-full"
      >
        {l("Edit boundaries")}
      </button>
      <button x-show="edit" type="button" x-on:click="edit = !edit" class="btn btn-soft w-full my-3">
        {l("Done")}
      </button>
