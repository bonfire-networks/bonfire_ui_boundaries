<div x-data="{edit: false}">
  <div class="mb-3" x-show="!edit">
    <div class="border border-base-content/20 mb-3 rounded-box w-full">
      <div class="flex items-center w-full p-4 gap-3">
        <Bonfire.UI.Boundaries.BoundariesPresetNameLive
          boundary_preset={@boundary_preset}
          with_description
        />
      </div>
    </div>

    <Bonfire.UI.Boundaries.YourRoleLive
      is_caretaker={@is_caretaker}
      role_name={@role_name}
      scope={@scope}
      role_permissions={@role_permissions}
      label={l("Your role")}
    />
  </div>

  {#if @is_caretaker}
    <div x-show="edit" :if={@object_id}>
      {#if is_list(@custom_acls) and @custom_acls != []}
        <div :for={acl <- @custom_acls}>
          <Bonfire.UI.Boundaries.AclLive
            id={"set_acl_#{id(acl)}"}
            acl_id={id(acl)}
            acl={acl}
            setting_boundaries={:edit_object}
            show_general_boundary={@show_general_boundary}
            to_boundaries={@boundary_preset || @to_boundaries}
            to_circles={@to_circles}
            exclude_circles={@exclude_circles}
          />
          <!-- read_only={@read_only} -->
        </div>
      {/if}

